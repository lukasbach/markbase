{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021"
    ],
    "outDir": "lib",
    "strict": true,
    "declaration": true
  },
  "include": [
    "src"
  ]
}
