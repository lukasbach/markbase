{
  "name": "markbase",
  "type": "commonjs",
  "version": "0.0.0",
  "description": "Quickly generate an HTML page from a bunch of markdown files",
  "tags": [
    "markdown",
    "documentation",
    "generate",
    "html",
    "homepage",
    "docs",
    "website",
    "fast",
    "cli",
    "tool"
  ],
  "author": "Lukas Bach <contact@lukasbach.com>",
  "license": "MIT",
  "bin": "lib/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "zx ./build.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "publish-fast",
    "start": "esr src/index.ts",
    "dev": "yarn start watch ./sample"
  },
  "files": [
    "dist-client/**/*",
    "lib/**/*",
    "!lib/**/*.spec.js",
    "src/**/*",
    "highlight-styles/**/*"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "http-server": "^14.1.1",
    "marked": "^11.0.1",
    "marked-admonition-extension": "^0.0.4",
    "marked-alert": "^2.0.1",
    "marked-base-url": "^1.1.2",
    "marked-code-format": "^1.1.2",
    "marked-custom-heading-id": "^2.0.6",
    "marked-footnote": "^1.1.3",
    "marked-highlight": "^2.1.0",
    "marked-linkify-it": "^3.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "ws": "^8.15.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@lukasbach/eslint-config-deps": "^1.0.3",
    "@types/fs-extra": "^11",
    "@types/http-server": "^0.12.4",
    "@types/node": "^20.10.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8",
    "esbuild": "^0.19.8",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.55.0",
    "publish-fast": "^0.0.20",
    "typescript": "latest",
    "zx": "^7.2.3"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "extends": "@lukasbach/base",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-shadow": "off"
    },
    "ignorePatterns": [
      "lib",
      "*.js",
      "src/client",
      "out",
      "dist-client"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "publish": {
    "preScripts": "build,lint",
    "releaseNotesSource": "next-releasenotes.md"
  }
}
