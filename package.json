{
  "name": "document-fast",
  "type": "commonjs",
  "version": "0.0.0",
  "private": true,
  "description": "Quickly generate an HTML page from a bunch of markdown files",
  "tags": [
    "markdown",
    "documentation",
    "generate",
    "html",
    "homepage",
    "docs",
    "website",
    "fast",
    "cli",
    "tool"
  ],
  "author": "Lukas Bach <contact@lukasbach.com>",
  "license": "MIT",
  "bin": "lib/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "publish-fast",
    "start": "esr src/index.ts"
  },
  "files": [
    "lib/**/*",
    "!lib/**/*.spec.js",
    "src/**/*"
  ],
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@lukasbach/eslint-config-deps": "^1.0.3",
    "@types/node": "^20.10.4",
    "esbuild": "^0.19.8",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.55.0",
    "publish-fast": "^0.0.20",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "extends": "@lukasbach/base",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "lib",
      "*.js"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "publish": {
    "preScripts": "build,lint:test,test",
    "releaseNotesSource": "next-releasenotes.md"
  }
}
